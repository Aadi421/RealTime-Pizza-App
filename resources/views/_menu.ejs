<section class="flex justify-center pt-10">
    
    <div class="w-full max-w-2xl ">
        <form action="/upload-menu" method="Post" class="bg-white w-full shadow-md rounded px-8 pt-6 pb-8 mb-4 " enctype="multipart/form-data">
            <%if(flash.error){%>
            <span class="text-red-500 text-sm"><%=flash.error%></span>
            <%}%>
        <div class="flex flex-row flex-wrap ">
            <div class="mb-4 mr-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="pizzaname">
                Name
            </label>
            <input 
                name="name" value="<%=flash.name%>"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="pizzaName" type="text" placeholder="pizza's name">
            </div>
            <div class="mb-4 mr-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                Image
            </label>
            <input 
                name="image" value="<%=flash.name%>" type="file"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="pizzaImage" type="text">
            </div>
            <div class="mb-4 mr-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="price">
                Price
            </label>
            <input 
                name="price" value="<%=flash.name%>"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="price" type="text" placeholder="pizza's price">
            </div>
            <div class="mb-4 mr-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="size">
                Size
            </label>
            <input 
                name="size" value="<%=flash.name%>"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="size" type="text" placeholder="pizza's size">
            </div>
            
            
            <div class="flex items-center justify-between mt-4">
            <button class="btn-primary text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" type="submit">
                Add
            </button>
            
            </div>
        <div>
        </form>
        
    </div>
    
</section>