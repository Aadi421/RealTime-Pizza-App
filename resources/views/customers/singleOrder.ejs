<section class="status">
    <div class="container mx-auto">
        <div class=" status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold">Track delivery status</h1>
                <h6 class="bg-white py-2 px-4 rounded-full text-green-600" ><%=order._id%></h6>
                <input id="hiddenInput" type="hidden" name="" value="<%=JSON.stringify(order)%>">
            </div>
            <ul>
                <li class="status_line text-lg pb-16 " data-status="order_placed"><span>Order Placed</span></li>
                <li class="status_line text-lg pb-16 " data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status_line text-lg pb-16" data-status="prepared"><span>Prepration</span></li>
                <li class="status_line text-lg pb-16" data-status="delivered"><span>Out for delivery</span></li>
                <li class="status_line text-lg " data-status="completed"><span>Complete</span></li>


            </ul>
            
        </div>
    </div>
    
</section>