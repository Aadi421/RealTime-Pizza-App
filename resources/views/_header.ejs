<section id="scrollCSS" class="sticky top-0 z-10">
<nav  class="container mx-auto flex items-center justify-between py-4 sticky top-0" >
            
    <div class="px-4">
        <a href="/"><img src="/img/logo.png" alt="logo" title="click here to go to home page"></a>
    </div>
    <div class="px-4">
        <ul class="flex items-center ">
            <!-- <li class="ml-6"><a href="/">Menu</a></li> -->

            <%if(locals.user){%>
                <%if(locals.user.role==='customer'){%>
                <li class="ml-6 scrollColor"><a href="/customer/orders">Order</a></li>
                <%}else{%>
                <li class="ml-6 scrollColor"><a href="/admin/orders">Order</a></li>

            <%}%>
            <li class="ml-6 scrollColor">
            <a href="/logout">Logout</a>            
            </li>
            <li class="ml-6 scrollColor">
             <div class=" flex items-center flex-col">
                 <label title="<%=user.email%>" class=" transition ease-in-out delay-400 hover:text-red-500 " for="username"><%=user.name%></label>
                 <!-- <label class="text-xs transition delay-400 ease-in-out hover:text-red-500 " for="username"><%=user.email%></label> -->
             </div>
            
            </li>
            <%}else{%>
            <li class="ml-6 scrollColor"><a href="/register">Register</a></li>
            <li class="ml-6 scrollColor"><a href="/login">Login</a></li>
            <%}%>
            <li class="ml-6 scrollColor" ><a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center">
                <img src="/img/cart.png" alt="cart">
                <span id="cartCounter" class="text-white font-bold pl-1 pb-4"><%=session.cart ? session.cart.totalQty :''%></span>
                
                </a>
            </li>
        </ul>
    </div>
</nav>
</section>


<script>

window.addEventListener('scroll', function() {
    
  if(window.pageYOffset>2){
      
      document.getElementById('scrollCSS').style.cssText ='background-color:#CCCFBC';
    //  #FE5F1E
    //   document.getElementsByClassName('scrollColor').style.cssText='color:white';
  }
  else{
      document.getElementById('scrollCSS').style.cssText ='background-color:white';
  }
});
</script>
